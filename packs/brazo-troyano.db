{"name":"19. Subsector Tlaiowaha","pages":[{"sort":100000,"name":"Subsector Tlaiowaha","type":"text","_id":"oSrI4vBMuKbbQeln","title":{"show":true,"level":1},"image":{},"text":{"format":1,"content":"<h3>Blue</h3><h3>Drinax</h3><h3>Paal</h3><h3>Tlaiowaha</h3><h3>Torpol</h3><h3>Tyokh</h3><h3>Vorito</h3>","markdown":""},"video":{"controls":true,"volume":0.5},"src":null,"system":{},"ownership":{"default":-1},"flags":{}}],"ownership":{"default":0,"NzibHGoy3bmdY1dM":3},"flags":{"core":{"sourceId":"JournalEntry.4sj6YFMKFtRC6OpM"}},"_stats":{"systemId":"twodsix","systemVersion":"2.32.3","coreVersion":"10.291","createdTime":1684338635904,"modifiedTime":1684739147068,"lastModifiedBy":"NzibHGoy3bmdY1dM"},"folder":null,"sort":0,"_id":"ZPMnOvFyJy5a5O5L"}
